{
    "_documentation": "https://github.com/gruntjs/grunt-contrib-copy",
    "cssAsScss": {
        "files": [
            {
                "expand": true,
                "cwd": "public/vendor",
                "src": ["**/*.css", "!**/*.min.css"],
                "dest": "public/vendor",
                "filter": "isFile",
                "ext": ".scss"
            }
        ]
    }
}