{
    "_documentation": "https://github.com/gruntjs/grunt-contrib-copy",
    "cssAsScss": {
        "files": [
            {
                "expand": true,
                "cwd": "public/vendor",
                "src": ["**/*.css", "!**/*.min.css"],
                "dest": "public/vendor",
                "filter": "isFile",
                "ext": ".scss"
            }
        ]
    },
    "dist": {
        "files": [
            {
                "expand": true,
                "cwd": "public",
                "src": ["*.html", "*.txt"],
                "dest": "dist",
                "filter": "isFile"
            },
            {
                "src": "public/vendor/requirejs/require.min.js",
                "dest": "dist/vendor/requirejs/require.min.js"
            },
            {
                "expand": true,
                "cwd": "public/js",
                "src": ["**/*"],
                "dest": "dist/js",
                "filter": "isFile"
            },
            {
                "expand": true,
                "cwd": "public/vendor/bootstrap/dist/fonts",
                "src": ["*"],
                "dest": "dist/vendor/bootstrap/dist/fonts",
                "filter": "isFile"
            }
        ]
    }
}