{
    "_documentation": "https://github.com/gruntjs/grunt-contrib-watch",
    "grunt": {
        "options": {
            "reload": true
        },
        "files": ["GruntFile.js", "grunt/*"]
    },
    "sass": {
        "files": ["public/css/sass/**/*.scss"],
        "tasks": ["sass:dev", "autoprefixer:dev"]
    },
    "livereload": {
        "options": {
            "livereload": true
        },
        "files": [
            "public/**/*.html",
            "public/css/**/*.css",
            "public/js/**/*.js"
        ]
    }
}